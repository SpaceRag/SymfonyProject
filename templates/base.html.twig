<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}BlaBlaChambe
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}

		{% endblock %}
		<script src="https://kit.fontawesome.com/63901024af.js" crossorigin="anonymous"></script>
	</head>

	<body>
		{% include './components/header.html.twig' %}
		{% include "./components/heroBanner.html.twig" %}
		{% include "./components/footer.html.twig" %}
		{% block pageTitle %}{% endblock %}
		{% block body %}
			<div class = "heroBanner" </div>
		{% endblock %}

		<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h5>Liens utiles</h5>
                <ul class="list-unstyled">
                    <li><a href="{{ path('offers') }}">Voir tous les trajets</a></li>
                    <li><a href="{{ path('app_rides') }}">Publier un trajet</a></li>
                    {% if app.user %}
                        <li><a href="{{ path('app_profile') }}">Profil</a></li>
                        <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
                    {% else %}
                        <li><a href="{{ path('app_login') }}">Connexion</a></li>
                        <li><a href="{{ path('app_register') }}">Inscription</a></li>
                    {% endif %}
                </ul>
            </div>
            <div class="col-md-6">
                <h5>Contact</h5>
                <ul class="list-unstyled">
                    <li><i class="fas fa-envelope"></i> Email: info@BlaBlaChambe.com</li>
                    <li><i class="fas fa-phone"></i> Téléphone: +1234567890</li>
                    <li><i class="fas fa-map-marker-alt"></i> Adresse: 123 rue de la Dynamo, Chambéry, France</li>
                </ul>
            </div>
        </div>
    </div>
</footer>
	</body>
</html>
