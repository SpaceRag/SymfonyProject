{% extends 'base.html.twig' %}

{% block body %}

	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<h1 class="mb-4">Cr√©er mon Trajet</h1>
				{{ form_start(form) }}
				<div class="mb-3">
					{{ form_row(form.depart, {'attr': {'class': 'form-control'}}) }}
				</div>

				<div class="mb-3">
					{{ form_row(form.destination, {'attr': {'class': 'form-control'}}) }}
				</div>

				<div class="mb-3">
					{{ form_row(form.seats, {'attr': {'class': 'form-control'}}) }}
				</div>

				<div class="mb-3">
					{{ form_row(form.price, {'attr': {'class': 'form-control'}}) }}
				</div>

				<div class="mb-3">
					{{ form_row(form.date, {'attr': {'class': 'form-control'}}) }}
				</div>

				<button type="submit" class="btn btn-primary">Publier mon trajet</button>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
