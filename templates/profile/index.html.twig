{% extends 'base.html.twig' %}

{% block title %}Votre Profil!{% endblock %}

{% block body %}
    <div class="container glass-effect">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="mb-4">Votre Profil</h1>

                <h2 class="mb-3">Configurez votre Vehicule</h2>
                {{ form_start(carForm) }}
                <div class="mb-3">
                    {{ form_row(carForm.brand, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(carForm.model, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(carForm.seats, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-primary">Enregistrer votre Vehicule</button>
                {{ form_end(carForm) }}
            </div>
        </div>
    </div>
{% endblock %}
