{% extends 'base.html.twig' %}

{% block title %}
	Modifier votre Véhicule
{% endblock %}

{% block body %}
<div class="container-fluid">
	<div class="row justify-content-center">
		<div class="col-md-6 mt-5 p-3 card-glass-effect">
			<h1 class="mb-4">
				<i class="fas fa-car"></i>
				Modifier votre Véhicule</h1>
			{{ form_start(form) }}
			<div class="mb-3">
				{{ form_label(form.brand, 'Marque') }}
				{{ form_widget(form.brand, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="mb-3">
				{{ form_label(form.model, 'Modèle') }}
				{{ form_widget(form.model, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="mb-3">
				{{ form_label(form.seats, 'Places') }}
				{{ form_widget(form.seats, {'attr': {'class': 'form-control'}}) }}
			</div>
			<button type="submit" class="btn btn-success">
				<i class="fas fa-save"></i>
				Enregistrer les modifications
			</button>
			<a href="{{ path('app_profile') }}" class="btn btn-danger">
				<i class="fas fa-times"></i>
				Annuler
			</a>
			{{ form_end(form) }}
		</div>
	</div>
</div>
{% endblock %}
